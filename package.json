{
  "name": "projections",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "copy": "mkdir -p build && cp src/index.html build",
    "bundle": "mkdir -p build && browserify src/main.js -o build/main.js -t [ babelify --presets [ es2015 react ] ]",
    "build": "npm run copy && npm run bundle",
    "rebuild": "watchy --watch src -- npm run build",
    "serve": "static build --cache 1",
    "start": "npm run serve & npm run rebuild"
  },
  "dependencies": {
    "react": "^0.14.7",
    "react-dom": "^0.14.7"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "eslint": "^2.5.1",
    "eslint-config-tschaub": "^4.0.0",
    "eslint-plugin-react": "^4.2.3",
    "node-static": "^0.7.7",
    "watchy": "^0.6.6"
  },
  "eslintConfig": {
    "extends": "tschaub/react",
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    }
  }
}
